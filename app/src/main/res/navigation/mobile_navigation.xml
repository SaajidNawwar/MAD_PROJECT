<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.pharmeasy.ui.home.HomeFragment"

        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_product"
        android:name="com.example.pharmeasy.ui.product.ProductFragment"
        android:label="@string/title_products"
        tools:layout="@layout/fragment_product" />

    <fragment
        android:id="@+id/navigation_promotion"
        android:name="com.example.pharmeasy.ui.Promotion.PromotionFragment"
        android:label="@string/title_promotion"
        tools:layout="@layout/fragment_promotion" />
    <fragment
        android:id="@+id/navigation_cart"
        android:name="com.example.pharmeasy.ui.cart.CartFragment"
        android:label="@string/title_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_user"
        android:name="com.example.pharmeasy.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />
</navigation>
